{
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "skipLibCheck": true,
        "jsx": "react",
        "module": "UMD",
        "moduleResolution": "node",
        "declaration": true,
        "esModuleInterop": true,
        "outDir": "lib"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}