{
    "compilerOptions": {
        "target": "ES5",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "skipLibCheck": true,
        "jsx": "react",
        "module": "UMD",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "declaration": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}